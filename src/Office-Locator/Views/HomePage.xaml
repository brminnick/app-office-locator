<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="OfficeLocator.HomePage"
	Title="{Binding Title}"
	IsBusy="{Binding IsBusy}"
	BackgroundImage = "powermapnew.png"
	>
	<ContentPage.Content Padding="0">
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height = "50"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Label Text = "Office Locator"
				   TextColor = "White"
				   FontSize = "24"
				   HorizontalOptions = "FillAndExpand"/>

			<Button 
				x:Name="butShowGovLocations"
				Grid.Row="1"
				BackgroundColor="#3498DB"
				BorderRadius="0"
				TextColor="White" 
				Text="Government"/>
			<Button 
				x:Name="ButShowPrivateSectorLocations"
				Grid.Row="2"
				BackgroundColor="#81C134" 
				BorderRadius="0"
				TextColor="White"
				Text="Private Sector"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
